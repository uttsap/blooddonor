<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afeastoffriends.bloodbank">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Blood Bank"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.afeastoffriends.bloodbank.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddContacts"
            android:label="Donor Information Form" />
        <activity
            android:name=".DialogOptions"
            android:theme="@style/Base.Theme.AppCompat.Dialog" />
        <activity android:name=".DonorDescription" android:label="Donor Information"/>

    </application>

</manifest>